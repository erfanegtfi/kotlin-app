<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>

        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="@dimen/spacing_normal"
                android:bottomRightRadius="@dimen/spacing_xlarge"
                android:topLeftRadius="@dimen/spacing_normal"
                android:topRightRadius="0dp" />

            <!--            <stroke-->
            <!--                android:width="2dp"-->
            <!--                android:color="@color/colorPrimary" />-->
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left=".5dp"
        android:right=".5dp"
        android:top="0dp">

        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="@dimen/spacing_normal"
                android:bottomRightRadius="@dimen/spacing_xlarge"
                android:topLeftRadius="@dimen/spacing_normal"
                android:topRightRadius="0dp" />

            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/md_grey_200" />

        </shape>

    </item>
</layer-list>