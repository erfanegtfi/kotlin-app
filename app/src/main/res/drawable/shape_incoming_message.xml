        android:left=".5dp"
        android:right=".5dp"
        android:top="0dp">

        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="@dimen/spacing_xlarge"
                android:bottomRightRadius="@dimen/spacing_normal"
