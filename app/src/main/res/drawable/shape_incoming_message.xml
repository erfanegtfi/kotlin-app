                android:bottomRightRadius="@dimen/spacing_normal"
                android:topLeftRadius="0dp"
                android:topRightRadius="@dimen/spacing_normal" />

<!--            <stroke-->
<!--                android:width="2dp"-->
<!--                android:color="@color/colorPrimary" />-->
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <item
